<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="sm:flex justify-between items-center space-y-4 sm:space-y-0">
    <h1 class="font-bold text-4xl">Capturing moments in life with gifs</h1>
    <%= link_to "Share your moment", new_moment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium text-center" %>
  </div>

  <div id="moments" class="min-w-full">
    <%= render @moments %>
  </div>
</div>
